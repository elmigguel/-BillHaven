  "dependencies": {
    "@supabase/supabase-js": "^2.x",
    "cors": "^2.8.5",
    "dotenv": "^16.x",
    "ethers": "^6.15.0",
    "express": "^4.x",
    "helmet": "^8.1.0",
    "stripe": "^14.x"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
