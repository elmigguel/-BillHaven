{
  "name": "billhaven-server",
  "version": "1.0.0",
  "description": "BillHaven Backend Server for webhooks and API",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "node --watch index.js",
    "test": "curl http://localhost:3001/health",
